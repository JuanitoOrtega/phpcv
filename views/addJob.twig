{% extends "layouts/admin.twig" %}

{% block content %}
<div class="text-center">
  <form class="form-signin" action="/jobs/add" method="post" enctype="multipart/form-data">
    <h1 class="h3 mb-3 font-weight-normal">Add Job</h1>
    {% if responseMessage %}
      <div class="alert alert-primary" role="alert">
        {{ responseMessage }}
      </div>
    {% endif %}
    <label for="inputTitle" class="sr-only">Title</label>
    <input type="text" id="inputTitle" class="form-control" placeholder="Title" required autofocus name="title">
    <label for="inputDescription" class="sr-only">Description</label>
    <input type="text" id="inputDescription" class="form-control" placeholder="Description" required name="description">
    <input type="file" class="form-control" required name="logo">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
  </form>
</div>
{% endblock %}